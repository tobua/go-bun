{
  "name": "go-bun",
  "description": "Point the Node.js JavaScript Runtime executable to Bun to ensure code runs with Bun.",
  "version": "0.0.0-development",
  "repository": "github:tobua/go-bun",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "check": "biome check --write .",
    "check-runtime": "bun check.ts",
    "go-bun": "sudo bun index.ts",
    "go-node": "sudo bun node.ts",
    "types": "tsc"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "^1.1.8",
    "typescript": "^5.5.4",
    "zero-configuration": "^0.17.3"
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "bin": {
    "check-runtime": "./check.ts",
    "go-bun": "./index.ts",
    "go-node": "./node.ts"
  },
  "files": [
    "check",
    "*.ts"
  ],
  "keywords": [
    "bun",
    "executable",
    "path"
  ],
  "publishConfig": {
    "provenance": true
  },
  "configuration": {
    "gitignore": "recommended",
    "vscode": "biome",
    "license": "MIT",
    "biome": {
      "extends": "recommended",
      "linter": {
        "rules": {
          "correctness": {
            "noNodejsModules": "off"
          },
          "suspicious": {
            "noConsoleLog": "off"
          }
        }
      },
      "files": {
        "ignore": [
          "scripts"
        ]
      }
    },
    "typescript": {
      "extends": "plugin",
      "compilerOptions": {
        "jsx": "react-jsx"
      },
      "files": [
        "index.ts",
        "node.ts",
        "check.ts"
      ]
    }
  }
}
